{
  "name": "mnk-server",
  "version": "1.0.0",
  "description": "Application server for Mononoke VR Tohi 2017",
  "main": "app.js",
  "scripts": {
    "watch:backend": "watch \"npm run dev:backend\" ./src/backend/",
    "watch:frontend": "watch \"npm run build:frontend\" ./src/frontend/",
    "watch": "npm-run-all -p watch:*",
    "dev": "webpack-dev-server --inline --hot",
    "dev:backend": "npm run build:backend && export STUB=true && export PORT=8080 && node ./dist/app.js",
    "compile:backend": "node_modules/.bin/tsc",
    "build:frontend": "npm run clean:frontend && cross-env NODE_ENV=production webpack --progress --hide-modules",
    "build:backend": "npm run compile:backend && rsync -arm --include='*/' --include='*.js' --include='*.map' --include='*.json' --exclude='*' ./src/backend/ ./dist/ && npm run clean:backend",
    "build": "npm-run-all -p build:*",
    "clean:frontend": "rimraf ./dist/public",
    "clean:backend": "find -E . -regex './src/backend/.+\\.(js|map)$' -type f | xargs rm",
    "clean:distall": "rimraf ./dist",
    "pretest": "npm run compile:backend",
    "test:backend": "istanbul cover _mocha -- ./src/backend/*.test.js",
    "test": "npm-run-all -p test:*",
    "posttest": "cd coverage && remap-istanbul -i coverage.json -o html-report -t html && npm run clean:backend"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/TakuroFukamizu/mnk-server.git"
  },
  "author": "Takuro Fukamizu",
  "license": "ISC",
  "homepage": "https://bitbucket.org/TakuroFukamizu/mnk-server#readme",
  "dependencies": {
    "axios": "^0.16.0",
    "babel-runtime": "^6.23.0",
    "bulma": "^0.4.0",
    "chart.js": "^2.5.0",
    "es6-promise": "^4.1.0",
    "express": "^4.15.2",
    "font-awesome": "^4.7.0",
    "google-spreadsheet": "^2.0.4",
    "material-design-lite": "^1.3.0",
    "mqtt": "^2.9.2",
    "socket.io": "^2.0.3",
    "three": "^0.76.1",
    "vue": "^2.2.6",
    "vue-chartjs": "^2.6.3",
    "vue-localstorage": "^0.2.0",
    "vue-mdl": "^1.1.1",
    "vue-router": "^2.3.1",
    "vue-socket.io": "^2.1.1-a",
    "vue-threejs": "0.0.0"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.19",
    "babel-core": "^6.24.0",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "cross-env": "^4.0.0",
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "istanbul": "^0.4.5",
    "json-loader": "^0.5.4",
    "mocha": "^3.4.2",
    "node-sass": "^4.5.2",
    "npm-run-all": "^4.0.2",
    "power-assert": "^1.4.4",
    "pug": "^2.0.0-beta6",
    "remap-istanbul": "^0.9.5",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.16.1",
    "ts-loader": "^2.3.2",
    "typedoc": "^0.8.0",
    "typescript": "^2.4.2",
    "vue-hot-reload-api": "^2.0.11",
    "vue-html-loader": "^1.2.4",
    "vue-loader": "^11.3.4",
    "vue-style-loader": "^2.0.5",
    "vue-template-compiler": "^2.2.6",
    "watch": "^1.0.2",
    "webpack": "^2.3.3",
    "webpack-dev-server": "^2.4.2"
  }
}
